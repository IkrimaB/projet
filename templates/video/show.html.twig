{% extends 'base.html.twig' %}

{% block title %}Video{% endblock %}

{% block body %}
    <h1>Video</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ video.title }}</td>
            </tr>
            <tr>
                <th>Lien video</th>
                <td>{{ video.videoLink }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ video.description }}</td>
            </tr>
            <tr>
                <th>Crée</th>
                <td>{{ video.createdAt|ago(locale='fr') }}</td>
            </tr>
            <tr>
                <th>Mis à jour</th>
                <td>{{ video.updatedAt|ago(locale='fr') }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_video_index') }}">Retour à l'accueill</a>

    <a href="{{ path('app_video_edit', {'id': video.id}) }}">Modifier</a>

    {{ include('video/_delete_form.html.twig') }}
{% endblock %}
